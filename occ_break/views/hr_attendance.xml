<odoo>


    <record id="break_attendance_form" model="ir.ui.view">
        <field name="name">break.attendance.form</field>
        <field name="model">hr.attendance</field>
        <field name="inherit_id" ref="hr_attendance.hr_attendance_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='check_out']" position="after">
                <field name="start_lunch"/>
                <field name="end_lunch"/>
                <field name="is_break"/>
            </xpath>
        </field>
    </record>

    <record id="break_attendance_tree" model="ir.ui.view">
        <field name="name">break.attendance.tree</field>
        <field name="model">hr.attendance</field>
        <field name="inherit_id" ref="hr_attendance.view_attendance_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='check_out']" position="after">
                <field name="start_lunch"/>
                <field name="end_lunch"/>
            </xpath>
        </field>
    </record>

    <record id="employee_break_form" model="ir.ui.view">
        <field name="name">break.employee.form</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='mobile_phone']" position="before">
                <field name="is_break"/>
                <field name="start_lunch"/>
                <field name="end_lunch"/>
            </xpath>
        </field>
    </record>


</odoo>
